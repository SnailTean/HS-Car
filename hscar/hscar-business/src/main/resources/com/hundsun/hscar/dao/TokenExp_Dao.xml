<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hundsun.hscar.dao.TokenDao">

	<select id="queryByUserId" resultType="com.hundsun.hscar.entity.TokenEntity">
		select * from tb_token where user_id = #{value}
	</select>

	<select id="queryByToken" resultType="com.hundsun.hscar.entity.TokenEntity">
		select * from tb_token where token = #{value}
	</select>

</mapper>